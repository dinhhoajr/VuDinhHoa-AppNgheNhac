<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    tools:context=".ControlActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_height="52dp"
        android:layout_width="128dp"
        app:layout_constraintVertical_bias="0.164"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="32sp"
        android:text="BÀI SỐ"
        android:gravity="center"
        android:textColor="@color/black"
        android:id="@+id/textView2"/>

    <TextView
        android:layout_height="52dp"
        android:layout_width="128dp"
        app:layout_constraintVertical_bias="0.084"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="38sp"
        android:text="1"
        android:textColor="@color/black"
        android:gravity="center"
        android:id="@+id/tvNumberSong"
        app:layout_constraintTop_toBottomOf="@+id/textView2"/>


    <TableLayout
        android:layout_height="400dp"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNumberSong">


    <TableRow
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <Button
            android:id="@+id/btnSong1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:width="100dp"
            android:height="80dp"
            android:backgroundTint="#009688"
            android:padding="10dp"
            android:text="1"
            android:textSize="25sp" />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:text="2"
            android:id="@+id/btnSong2"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:height="80dp"
            android:width="100dp"
            android:backgroundTint="#009688"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:text="3"
            android:id="@+id/btnSong3"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:height="80dp"
            android:width="100dp"
            android:backgroundTint="#009688"/>
    </TableRow>

        <TableRow
            android:layout_height="match_parent"
            android:layout_width="match_parent">
            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="25sp"
                android:text="4"
                android:id="@+id/btnSong4"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:height="80dp"
                android:width="100dp"
                android:backgroundTint="#009688"/>

            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="25sp"
                android:text="5"
                android:id="@+id/btnSong5"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:height="80dp"
                android:width="100dp"
                android:layout_span="2"
                android:backgroundTint="#009688"/>
        </TableRow>

        <TableRow
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="25sp"
                android:text="6"
                android:id="@+id/btnSong6"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:height="80dp"
                android:width="100dp"
                android:layout_span="2"
                android:backgroundTint="#009688"/>

        </TableRow>

        <TableRow
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>